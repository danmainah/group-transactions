<div class="d-flex justify-content-between w-100">
      <div class="card-body">
         <h3 class= "text-white-light d-flex justify-content-center"> Project: <%= @group.name%>  </h3>
         <h3 class= "text-white-light d-flex justify-content-center">
            <%= image_tag  @group.icon , class: 'float-md-center me-3' ,style: 'width: 80px; height: 80px;' %>
          </h3>
          <div class="d-flex justify-content-between w-100">
              <div class="card-body">
                 <% @projects.each do |project| %>
                    <h5 class="card-title"><%= project.name %></h5>
                    <p class="card-text"><small class="text-muted">
                      <%= project.created_at.to_s(:rfc822) %>
                     </small></p>
                      <p class= "card-text title"> 
                        <%= project.amount %>
                        <% end %>
                      </p>
              </div>   
          </div>
      </div>
</div>       
                
<div class="row justify-content-center h-100">
  <div class="col-12 col-lg-7 mt-lg-5">
    <div class="card p-3">
       <%= form_with model: [ @group, @group.projects.build ] do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>
      <br>
       <div class="form-group">
         <%= form.label :amount %>
         <%= form.number_field :amount %>
       </div>
       <%= form.submit %>
       <% end %>
    </div>
  </div>
</div>
<%= link_to 'Back', groups_path, class: "btn btn-success btn-lg btn-block " %>