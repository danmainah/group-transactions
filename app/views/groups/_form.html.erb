<h3 class= "text-white-light d-flex justify-content-center">New Group <%= @group.name%> </h3>
<div class= "row  d-flex align-items-center  bg-primary text-light ">
<%= form_with(model: group, local: true) do |form| %>
 <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :icon %><br>
    <%= form.file_field :icon, class: "form-control" %>
  </div>

  <br>
  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-kg btn-primary" %>
  </div>
<% end %>
<%= link_to 'Back', groups_path ,class: 'btn btn-primary '%>