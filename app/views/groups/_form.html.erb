<div class="row justify-content-center h-100">
  <div class="col-12 col-lg-7 mt-lg-5">
    <div class="card p-3">
     <h2>New group</h2>
      <h3><%= @group.name%></h3>
     <%= form_with(model: group, local: true) do |form| %>
      <div class="form-group"> 
        <%= form.label :name %><br>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :icon %>
        <%= form.file_field :icon %>
      </div>
      <%= form.submit "Submit", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
<%= link_to 'Back', groups_path, class: "btn btn-success btn-lg btn-block" %>
