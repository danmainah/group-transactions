<div class="row d-flex align-items-center  bg-primary " style="height:400px;">
<h3 class= 'd-flex justify-content-center mt-0 sticky-top text-white'> Welcome To Projects</h3>
<%= form_with(model: user) do |form| %>
  <div class="field d-flex justify-content-center text-white">
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div class="actions d-flex justify-content-center bg-primary mt-2">
    <%= form.submit %>
  </div>
<% end %>
</div>

<div class="row justify-content-center h-100">
  <div class="col-12 col-lg-7 mt-lg-5">
    <div class="card p-3">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :username %><br />
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'form-control' %>
        </div>


        <div class="actions">
          <%= f.submit "Log in", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>